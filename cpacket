#!/bin/bash

# Version 2.1
# Author: Juanjo Salvador
# Website: http://juanjosalvador.github.io/
# Repo: https://github.com/JuanjoSalvador/CPacket

IFS='
'

for i in * ; do
	
	if [ -d $i ]; then

		newName=`echo $i | tr " " _`
		mv $i $newName	

		if [ -d "$newName" ]; then
			packed=`echo $newName.cbz`
			zip $packed $i/*.jpg
		fi
	else
		
		echo "No hay directorios."
		break;
	fi

done
